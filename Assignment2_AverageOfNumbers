package Assignment2;
public class AverageOfNumbers {	
	public static void main(String[] args) {
        double[] arr1 = {1, 2, 3, 4, 5};
        double total = 0;
        for(int i=0; i<arr1.length; i++){
        	total = total + arr1[i];
        }
        double average = total / arr1.length;       
        System.out.format("The average is: %.2f", average);
    }
}
